<div class="main-nav">
<%= render 'menu' %>

</div>

<div class="content center">
  <h2 style="font-weight: bold;">Adviser Dashboard</h2>
  <br>
  <div class="center">
<table role='datatable'>
  <thead>
    <tr>
      <th>Client name</th>
      <!--<th>Client email</th>-->
      <th>Inv amount</th>
      <!--<th>Submitted</th>-->
      <!--<th>Checked</th>-->
      <th>Started date</th>
      <!--<th>Advisor name</th>-->
      <th>Stage</th>
      <!--<th>Client is customer</th>-->
      <!--<th>Complete</th> -->
      <th>Submitted date</th>
      <th>Completed date</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= link_to application.client_name, application_path(application) %></td>
        <!--<td><%= application.client_email %></td> -->
        <td><%= application.inv_amount %></td>
        <!--<td><%= application.submitted %></td> -->
        <!--<td><%= application.checked %></td> -->
        <td><%= application.started_date %></td>
        <!--<td><%= application.advisor_name %></td>-->
        <td><%= application.stage %></td>
        <!--<td><%= application.client_is_customer %></td> -->
        <!--<td><%= application.complete %></td> -->
        <td>
          <%= if !application.submitted
         "N/A"
         else
         application.submitted_date
         end %>

         </td>
        <td><%= if !application.complete
         "N/A"
         else
         application.completed_date
         end %></td>

         <td>
          <%= if !application.complete
        link_to '<span class="Button" id="emailButton">Email Client</span>'.html_safe
        else
        " "
         end %>
       </td>
        <!--<td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<%= link_to 'New Application', new_application_path %>
</div>
</div>



<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Client first name</th>
      <th>Cleint last name</th>
      <th>Amount</th>
      <th>Advisor name</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.user %></td>
        <td><%= application.client_first_name %></td>
        <td><%= application.cleint_last_name %></td>
        <td><%= application.amount %></td>
        <td><%= application.advisor_name %></td>
        <td><%= application.client %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

